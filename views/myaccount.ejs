<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Account</title>

  <!-- Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

  <!-- GSAP -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 min-h-screen flex items-center justify-center p-4">

  <div id="accountCard" class="bg-white shadow-2xl rounded-2xl p-8 max-w-3xl w-full transform scale-95 opacity-0">
    <!-- User Info -->
    <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6 mb-8">
      <img src="<%= user.picture %>" alt="Profile Picture" class="w-28 h-28 object-cover rounded-full shadow-lg ring-2 ring-blue-400">
      <div class="text-center sm:text-left">
        <h1 class="text-3xl font-bold text-gray-800 mb-1"><%= user.fullname %></h1>
        <p class="text-gray-600 text-sm"><%= user.email %></p>
        <p class="text-gray-600 text-sm">ðŸ“ž <%= user.contact %></p>
      </div>
    </div>

    <!-- Cart Section -->
    <div class="mb-8">
      <h2 class="text-xl font-semibold text-gray-700 mb-3">ðŸ›’ Cart Items</h2>
      <% if (user.cart.length > 0) { %>
        <ul class="list-disc list-inside text-gray-700 space-y-1">
          <% user.cart.forEach(function(item) { %>
            <li class="hover:text-blue-600 transition duration-200"><%= item.name || item %></li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-gray-500 italic">No items in cart.</p>
      <% } %>
    </div>

    <!-- Orders Section -->
    <div>
      <h2 class="text-xl font-semibold text-gray-700 mb-3">ðŸ“¦ Orders</h2>
      <% if (user.orders.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full text-sm text-left text-gray-700 border border-gray-300">
            <thead class="bg-gray-200 text-gray-800">
              <tr>
                <th class="px-4 py-2 border">Order #</th>
                <th class="px-4 py-2 border">Items</th>
              </tr>
            </thead>
            <tbody>
              <% user.orders.forEach(function(order, index) { %>
                <tr class="border-b hover:bg-gray-100 transition duration-200">
                  <td class="px-4 py-2 border"><%= index + 1 %></td>
                  <td class="px-4 py-2 border">
                    <ul class="list-disc list-inside space-y-1">
                      <% order.forEach(function(item) { %>
                        <li><%= item.name || item %></li>
                      <% }) %>
                    </ul>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-gray-500 italic">No orders found.</p>
      <% } %>
    </div>
  </div>

  <script>
    // GSAP entry animation
    window.addEventListener("DOMContentLoaded", () => {
      gsap.to("#accountCard", {
        duration: 1,
        opacity: 1,
        scale: 1,
        ease: "power2.out"
      });
    });
  </script>
</body>
</html>
