<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account | Sparkle Social</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <style>
        .toast {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 1rem;
            border-radius: 0.5rem;
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            transform: translateX(200%);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-600 via-purple-600 to-pink-500">
    <!-- Toast Notification -->
    <div id="toast" class="toast">
        <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            <span id="toastMessage" class="text-gray-800"></span>
        </div>
    </div>

    <!-- Navigation Bar -->
    <nav class="fixed top-0 w-full bg-white/10 backdrop-blur-md z-50 px-4 py-3">
        <div class="max-w-6xl mx-auto flex justify-between items-center">
            <h2 class="text-2xl font-bold text-white">Sparkle Social</h2>
            <button 
                id="profileBtn"
                onclick="checkLoginStatus()"
                class="px-6 py-2 bg-white text-blue-600 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-lg active:scale-95"
            >
                Profile
            </button>
        </div>
    </nav>

    <div class="w-full min-h-screen flex items-center justify-center p-4 bg-white/10 backdrop-blur-sm pt-20">
        <div class="max-w-md w-full bg-white/20 backdrop-blur-xl p-8 rounded-xl shadow-2xl opacity-0" id="formContainer">
            <h3 class="text-4xl font-bold mb-8 text-white text-center">Create Account</h3>
            <form action="/regester" method="post" class="space-y-4">
                <div class="space-y-4">
                    <input 
                        class="w-full px-4 py-3 outline-none bg-white/10 border border-white/20 rounded-lg focus:border-white/40 focus:bg-white/20 transition-all duration-300 text-white placeholder-white/60" 
                        type="text" 
                        name="name" 
                        placeholder="Full Name"
                    >
                    <input 
                        class="w-full px-4 py-3 outline-none bg-white/10 border border-white/20 rounded-lg focus:border-white/40 focus:bg-white/20 transition-all duration-300 text-white placeholder-white/60" 
                        type="text" 
                        name="username" 
                        placeholder="Username"
                    >
                    <input 
                        class="w-full px-4 py-3 outline-none bg-white/10 border border-white/20 rounded-lg focus:border-white/40 focus:bg-white/20 transition-all duration-300 text-white placeholder-white/60" 
                        type="password" 
                        name="password" 
                        placeholder="Password"
                    >
                    <input 
                        class="w-full px-4 py-3 outline-none bg-white/10 border border-white/20 rounded-lg focus:border-white/40 focus:bg-white/20 transition-all duration-300 text-white placeholder-white/60" 
                        type="email" 
                        name="email" 
                        placeholder="Email Address"
                    >
                    <input 
                        class="w-full px-4 py-3 outline-none bg-white/10 border border-white/20 rounded-lg focus:border-white/40 focus:bg-white/20 transition-all duration-300 text-white placeholder-white/60" 
                        type="number" 
                        name="age" 
                        placeholder="Age"
                    >
                </div>
                <button 
                    type="submit" 
                    class="w-full py-3 px-4 bg-white text-blue-600 font-semibold rounded-lg transition-all duration-300 transform hover:scale-[1.02] active:scale-[0.98] mt-6 hover:bg-blue-50"
                >
                    Create Account
                </button>
            </form>
        </div>
    </div>

    <script>
        // Toast notification function
        function showToast(message, duration = 3000) {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            toastMessage.textContent = message;

            // Animate toast in
            gsap.to(toast, {
                x: 0,
                duration: 0.5,
                ease: 'power3.out'
            });

            // Animate toast out after duration
            setTimeout(() => {
                gsap.to(toast, {
                    x: '200%',
                    duration: 0.5,
                    ease: 'power3.in'
                });
            }, duration);
        }

        // Function to check login status and redirect
        async function checkLoginStatus() {
            try {
                const response = await fetch('/profile');
                if (response.ok) {
                    window.location.href = '/profile';
                } else {
                    const data = await response.json();
                    showToast(data.message || 'Please login first');
                    setTimeout(() => {
                        window.location.href = '/login';
                    }, 2000);
                }
            } catch (error) {
                showToast('Please login to continue');
                setTimeout(() => {
                    window.location.href = '/login';
                }, 2000);
            }
        }

        // GSAP Animations
        window.addEventListener('DOMContentLoaded', () => {
            // Animate nav button
            gsap.from('#profileBtn', {
                y: -50,
                opacity: 1,
                duration: 0.8,
                ease: 'power3.out'
            });

            // Fade in the form container
            gsap.to("#formContainer", {
                opacity: 1,
                y: 0,
                duration: 1,
                ease: "power3.out"
            });

            // Stagger animate the input fields
            gsap.from("input", {
                y: 20,
                opacity: 1,
                duration: 0.8,
                stagger: 0.1,
                ease: "power2.out",
                delay: 0.5
            });

            // Animate the submit button
            gsap.from("button[type='submit']", {
                scale: 0.8,
                opacity: 1,
                duration: 0.5,
                ease: "back.out(1.7)",
                delay: 1.2
            });
        });
    </script>
</body>
</html>